            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-4">
  <% products.forEach(product => { %>
    <div class="flex flex-col rounded-xl bg-white overflow-hidden shadow hover:shadow-xl hover:scale-[1.02] transition duration-300 border border-[#e0eae0] p-6">
  <p class="text-[#111811] text-xl font-bold"><%= product.commodity %></p>
  <p class="text-gray-600 text-sm"><strong>State:</strong> <%= product.state %></p>
  <p class="text-gray-600 text-sm"><strong>District:</strong> <%= product.district %></p>
  <p class="text-gray-600 text-sm"><strong>Market:</strong> <%= product.market %></p>
  
  <p class="text-xs bg-green-50 text-green-700 px-2 py-1 rounded-full w-fit mt-2">
    Arrival: <%= product.arrival_date %>
  </p>
  
  <p class="text-green-800 font-bold text-lg mt-2">
    ₹<%= product.min_price %> - ₹<%= product.max_price %> 
    <span class="text-gray-500 font-normal text-sm">(Modal: ₹<%= product.modal_price %>)</span>
  </p>
</div>

  <% }) %>
